{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "Colombian Law MCP",
  "description": "Golden contract tests for the Colombian Law MCP with real ingestion from Función Pública - Gestor Normativo",
  "tests": [
    {
      "id": "co-001",
      "category": "article_retrieval",
      "description": "Retrieve Ley 1581 Article 1",
      "tool": "get_provision",
      "input": {
        "document_id": "co-ley-1581-2012",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["derecho", "datos", "Constitución"],
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "co-002",
      "category": "article_retrieval",
      "description": "Retrieve Ley 1273 Article 269A",
      "tool": "get_provision",
      "input": {
        "document_id": "co-ley-1273-2009",
        "section": "269A"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["sistema informático", "sin autorización"],
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "co-003",
      "category": "article_retrieval",
      "description": "Retrieve Ley 1712 Article 1",
      "tool": "get_provision",
      "input": {
        "document_id": "co-ley-1712-2014",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "co-004",
      "category": "search",
      "description": "Full-text search for 'datos personales' returns relevant provisions",
      "tool": "search_legislation",
      "input": {
        "query": "datos personales"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1
      }
    },
    {
      "id": "co-005",
      "category": "search",
      "description": "Full-text search for 'sistema informático' returns cybercrime provisions",
      "tool": "search_legislation",
      "input": {
        "query": "sistema informático"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1
      }
    },
    {
      "id": "co-006",
      "category": "search",
      "description": "Full-text search for 'comercio electrónico' returns e-commerce provisions",
      "tool": "search_legislation",
      "input": {
        "query": "comercio electrónico"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1
      }
    },
    {
      "id": "co-007",
      "category": "citation_roundtrip",
      "description": "Citation for Ley 1581 article includes content",
      "tool": "get_provision",
      "input": {
        "document_id": "co-ley-1581-2012",
        "section": "2"
      },
      "assertions": {
        "result_not_empty": true,
        "text_not_empty": true
      }
    },
    {
      "id": "co-008",
      "category": "metadata",
      "description": "list_sources returns metadata for Colombian law data",
      "tool": "list_sources",
      "input": {},
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["CO"]
      }
    },
    {
      "id": "co-010",
      "category": "negative_test",
      "description": "Non-existent law returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "fictional-law-2099",
        "section": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "co-011",
      "category": "negative_test",
      "description": "Malformed article number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "co-ley-1581-2012",
        "section": "999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "co-012",
      "category": "list_sources",
      "description": "list_sources returns metadata including jurisdiction",
      "tool": "list_sources",
      "input": {},
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["CO"]
      }
    }
  ]
}
